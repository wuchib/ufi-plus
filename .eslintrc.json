{
  "root": true,
  "env": {
    "es2022": true,
    "browser": true,
    "node": true
  },
  "extends": [
    "plugin:vue/vue3-recommended",
    "eslint:recommended"
  ],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "vue/multi-word-component-names": "off"
  },
  "ignorePatterns": [
    "dist",
    "node_modules"
  ]
}